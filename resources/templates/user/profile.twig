{% extends "authenticated_layout.twig" %}

{% block content%}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Your profile</h1>
            <form role="form" method="POST" enctype="multipart/form-data" action="{{ path('save_user_profile') }}">
                <div class="form-group">
                    <label for="CompleteNameField">Complete name</label>
                    <input type="text" class="form-control" id="CompleteNameField" name="complete_name" value="{{ user.complete_name }}" required>
                </div>
                <div class="form-group">
                    <label for="UsernameField">Email</label>
                    <input type="email" class="form-control" id="UsernameField" name="username" value="{{ user.username }}" readonly>
                </div>
                <div class="form-group">
                    <label for="PasswordField">New Password</label>
                    <input type="password" class="form-control" id="PasswordField" name="password" required>
                </div>
                <div class="form-group">
                    <label for="ConfirmPasswordField">Confirm Password</label>
                    <input type="password" class="form-control" id="ConfirmPasswordField" name="confirm_password" required>
                </div>
                <button type="submit" class="btn btn-primary">Update profile</button>
            </form>
        </div>
    </div>
</div>
{% endblock content %}